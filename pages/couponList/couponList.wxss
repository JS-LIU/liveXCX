.wrap{
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:#FAFAFA;
}
.coupon_status_list{
  position:fixed;
  top:0;
  width:100%;
  z-index:2;
  background:#FFFFFF;
  display:flex;
  flex-direction: row;
  align-items: center;
  height:78rpx;
  padding-left:30rpx;
}
.status_item{
  padding-right:60rpx;
  font-size:24rpx;
  color:#979797;
}
.status_item_selected{
  padding-right:60rpx;
  font-size:26rpx;
  color:#000000;
}
.coupon_content{
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;
  z-index:1;
}
.coupon_list{
  margin:78rpx 0;
  width:100%;
  height:100%;
  padding-bottom:100rpx;
}
.no_coupon_img_box{
  margin:78rpx 0;
  width:100%;
  height:100%;
  display: flex;
  justify-content: center;
}
.coupon_item{
  position:relative;
  margin:20rpx auto;
  width:664rpx;
  height:180rpx;
}
.coupon_bg{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
}
.coupon_item_cash{
  position:absolute;
  color:#FF6458;
  font-size:54rpx;
  left:36rpx;
  top:20rpx;
}
.coupon_item_info{
  position:absolute;
  left:36rpx;
  top:92rpx;
  font-size:24rpx;
  color:#979797;
  display:flex;
  flex-direction: row;
}
.coupon_item_end_time{
  padding-left:50rpx;
}
.coupon_limit{
  position: absolute;
  bottom: 3rpx;
  height: 34rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 22rpx;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  background: #E8E8E8;
  color: #979797;
  font-size: 20rpx;
  left: 3rpx;
  right: 3rpx;
}
.no_coupon_img{
  width:222rpx;
  height:166rpx;
  margin-top: 200rpx;
}