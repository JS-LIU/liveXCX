.logo{
  display:flex;
  flex-basis: row;
  width:312rpx;
  margin:174rpx auto 0;
  
}
.logo_img{
  width:312rpx;
  height:84rpx;
}
.login{
  display:flex;
  flex-direction: column;
  align-items: center;
  margin-top:160rpx;
}
.input_phone_num_box{
