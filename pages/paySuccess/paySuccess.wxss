.pay_info{
  display:flex;
  flex-direction: column;
  align-items: center;
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;
  margin-top:250rpx;
}
.pay_success_pic{
  width:108rpx;
  height:108rpx;
  border-radius: 50%;
}
.pay_icon_pic{
  width:108rpx;
  height:108rpx;
}
.pay_title{
  font-size:32rpx;
  color:#61BF55;
  padding-top:50rpx;
}
.pay_time{
  font-size:24rpx;
  color:#979797;
  padding-top:30rpx;
}
.to_my_course{
  width:246rpx;
  height:80rpx;
  border:1rpx solid #808080;
  border-radius: 8rpx;
  color:#808080;
  font-size:28rpx;
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top:100rpx;
}
